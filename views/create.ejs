<%- include("partials/header.ejs")-%>

<div class="container mt-5">
  <% if (errors ){ %>
    <% for (let e in errors) { %>
      <p class="alert alert-danger"><%=  errors[e] %></p>
    <% } %>
  <% } %>
    
  <form action="/create" method="POST" class="form-center">
    <div class="form-group w-25">
      <label for="title">Title</label>
      <input value="<%= values.title %>"  name="title" type="text" class="form-control"   placeholder="Enter title" >
    </div>
    <div class="form-group w-25">
      <label for="description">Description</label>
      <input value="<%= values.description %>" name="description" class="form-control" id="description" rows="3" placeholder="Description">
    </div>
  
    <button type="submit" class="btn btn-primary w-25">Create</button>
  </form>
</div>

