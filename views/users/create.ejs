<%- include("../partials/header.ejs")-%>

<div class="container">
  <h2 class="title--end">Page create users</h2>
  <% if (errors ){ %>
    <% for (let e in errors) { %>
      <p class="alert alert-danger"><%=  errors[e] %></p>
    <% } %>
  <% } %>
  <form action="/users/create" method="POST" class="form-center" enctype="multipart/form-data">
    <div class="form-group w-25">
      <label for="name">User Name</label>
      <input value="<%= values.name %>" name="name" type="text" class="form-control"   placeholder="Enter username" required>
    </div>
    <div class="form-group w-25">
      <label for="email">Email</label>
      <input value="<%= values.email %>" name="email" type="email" class="form-control"  placeholder="email" >
    </div>
    <div class="form-group w-25">
      <label for="password">Password</label>
      <input value="<%= values.password %>" name="password" type="password" class="form-control"   placeholder="Enter password" required>
    </div>
    <div class="form-group w-25">
      <label for="avatar">Avatar</label>
      <input  name="avatar" type="file" class="form-control-file" >
    </div>
    <button type="submit" class="btn btn-primary w-25">Create</button>
  </form>
</div>