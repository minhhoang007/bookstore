<%- include("../partials/header.ejs")-%>

<div class="container">
    <h2 class="title">List users</h2>

    <h4> <a href="/users/create">Create new User</a></h4>

        <table class="table">
            <thead>
              <tr>
                <th scope="col">images</th>
                <th scope="col">Users Name</th>
                <th scope="col">Address</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <% users.forEach((e) => { %>
            <tbody>
              <tr>
                <th scope="row">
                  <img src="<%= e.avatar %>" alt="pc" style="width: 32px">
                </th>
                <td><%= e.name %></td>
                <td><%= e.address %></td>
                <td><a href="/users/<%= e.id %>/edit">edit</a></td>
                <td><a href="/users/<%= e.id %>/delete">delete</a></td>
              </tr>
            </tbody>
            <% }) %>
          </table>

</div>