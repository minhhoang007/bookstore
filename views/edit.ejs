<%- include("partials/header.ejs")-%>


<div class="container">
  <h2 class="title--end">Edit page</h2>

  <% if (errors ){ %>
    <% for (let e in errors) { %>
      <p class="alert alert-danger"><%=  errors[e] %></p>
    <% } %>
  <% } %>

  <% books.forEach((e) => { %>
  <form action="/<%= e.id %>/edit" method="POST" class="form-center">
    
      <div class="form-group w-25">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" value="<%= e.title %>">
      </div>
      <div class="form-group w-25">
        <label for="description">Description</label>
        <input name="description" type="text" class="form-control"  value="<%= e.description %>" required>
      </div>
   
  
    <button type="submit" class="btn btn-primary w-25">Create</button>
  </form>
  <% }) %>

</div>