<%- include("partials/header.ejs")-%>


<div class="container">
  <h2 class="title--end">Edit page</h2>

  <form action="/create" method="POST" class="form-center">
    <div class="form-group w-25">
      <label for="title">Title</label>
      <input name="title" type="text" class="form-control" value="<%= books.title %>">
    </div>
    <div class="form-group w-25">
      <label for="description">Description</label>
      <input name="description" type="text" class="form-control"  value="<%= books.description %> required">
    </div>
  
    <button type="submit" class="btn btn-primary w-25">Create</button>
  </form>

</div>